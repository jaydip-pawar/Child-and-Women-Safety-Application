<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#803471" />
            <gradient android:angle="-90" android:startColor="#B9369F" android:endColor="#B44C9F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#291823" />
            <solid android:color="#291823"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F578DC" />
            <gradient android:angle="-90" android:startColor="#BB40A4" android:endColor="#F578DC" />
        </shape>
    </item>
</selector>